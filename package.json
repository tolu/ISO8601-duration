{
  "name": "iso8601-duration",
  "version": "1.3.0",
  "description": "Node/Js-module for parsing and making sense of ISO8601-durations",
  "main": "lib/index.js",
  "types": "index.d.ts",
  "jsnext:main": "src/index.js",
  "scripts": {
    "lint": "standard | snazzy",
    "test": "npm run lint && npm run flow && npm run ava && npm run tsc",
    "watch": "onchange '**/*.js' -- npm run test",
    "compile": "babel -d lib/ src/",
    "prepublishOnly": "npm run compile",
    "patch-release": "npm test && npm version patch && git push --follow-tags",
    "flow": "flow",
    "ava": "ava",
    "tsc": "tsc"
  },
  "files": [
    "src/index.js",
    "lib/index.js",
    "index.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tolu/ISO8601-duration.git"
  },
  "keywords": [
    "ISO8601",
    "duration",
    "time"
  ],
  "author": "Tobias Lundin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tolu/ISO8601-duration/issues"
  },
  "homepage": "https://github.com/tolu/ISO8601-duration#readme",
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/eslint-parser": "^7.14.5",
    "@babel/preset-env": "^7.14.5",
    "@babel/preset-flow": "^7.14.5",
    "@babel/register": "^7.14.5",
    "ava": "^3.15.0",
    "eslint-plugin-flowtype": "^5.7.2",
    "flow-bin": "^0.153.0",
    "onchange": "^7.1.0",
    "snazzy": "^9.0.0",
    "standard": "^16.0.3",
    "typescript": "^3.0.3"
  },
  "standard": {
    "ignore": [
      "lib/*.js"
    ],
    "parser": "@babel/eslint-parser",
    "plugins": [
      "flowtype"
    ]
  },
  "ava": {
    "files": [
      "test/*.js"
    ],
    "failFast": true,
    "verbose": true,
    "require": [
      "@babel/register"
    ]
  }
}
